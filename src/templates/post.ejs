<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.name %></title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }
    
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }
    
    .post-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 600px;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .post-card h1 {
        margin: 0;
        margin-bottom: 10px;
    }
    
    .post-card p {
        margin: 5px 0;
    }
    
    a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007BFF;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
    </style>
    <div class="post-card">
        <h1><%= post.name %></h1>
        <p>Author: <%= post.author %></p>
        <p>Description: <%= post.description %></p>
        <p>Published on: <%= post.date %></p>
    </div>
</body>
</html>
