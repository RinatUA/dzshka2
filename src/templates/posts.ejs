<html lang="en"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/posts.js"></script>
</head>
<body>
    <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }
    
    h1 {
        text-align: center;
        margin-bottom: 20px;
    }
    
    .post-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 600px;
        margin: 20px auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .post-card h1 {
        margin: 0;
        margin-bottom: 10px;
    }
    
    .post-card p {
        margin: 5px 0;
    }
    
    a {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #007BFF;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
    </style>
    <h1>All Posts</h1>

    <ul>
        <% posts.forEach(post => { %>
            <li><strong><%= post.name %></strong> by <%= post.author %></li>
        <% }) %>
    </ul>

    <button id="createPostBtn">створити пост</button>
    
    <div id="message"></div>
</body>
</html>